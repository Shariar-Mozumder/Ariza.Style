<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shariarspc.ariza_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ariza_logoooo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Login_Register.LoginActivity"></activity>
        <activity android:name=".Login_Register.RegisterActivity" />
        <activity android:name=".CheckOut.CheckOut"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Cart.CartProductShow"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Catagories.Catagory_Product_List"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".IndividualProductDetails.ProductDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>