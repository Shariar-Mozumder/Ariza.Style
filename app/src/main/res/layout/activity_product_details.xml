                android:id="@+id/product_name"
                android:textAlignment="center"
                android:maxLines="2"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
