<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/model_image"
        android:src="@drawable/western"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_name_TV"
            android:text="Western T-Shirt"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:textStyle="bold|italic"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_description_TV"
            android:text="Comfort and good Febrics"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_size_TV"
            android:text="Size available: M,L,XL,XXL"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:layout_margin="5dp"/>
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>