<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >






        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/model_image_cart"
            android:src="@drawable/western"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_name_TV_cart"
                android:text="Western T-Shirt"
                android:textSize="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#111111"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_Price_TV_cart"
                android:text="10*5 BDT"
                android:textSize="15dp"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:layout_below="@+id/product_name_TV_cart"
                android:textColor="#111111"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:layout_height="30dp"
                android:layout_width="100dp"
                app:textSize="10dp"
                android:id="@+id/number_btn_cart"
                app:initialNumber="1"
                android:layout_centerInParent="true"
                app:backGroundColor="@color/colorPrimary"
                app:textColor="#ffff"
                android:layout_margin="5dp"
                android:layout_below="@+id/product_Price_TV_cart"
                android:layout_marginTop="5dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/metaTotal"
                android:text="50 BDT"
                android:textSize="15dp"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:layout_below="@+id/number_btn_cart"
                android:textColor="#111111"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:id="@+id/deleteimG"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"
                />




        </RelativeLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>