<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:layout_height="280dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:orientation="vertical"
        >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/model_image_grid"
            android:src="@drawable/western"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_name_TV_grid"
                android:text="Western T-Shirt"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="center"
                android:textColor="#111111"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_description_TV_grid"
                android:text="Comfort and good Febrics"
                android:textSize="10dp"
                android:ellipsize="end"
                android:textAlignment="center"
                android:maxLines="2"
                android:textColor="#111111"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_price_TV_grid"
                android:text="Price Default"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>